<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cosc592.meetingscheduler">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/app_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MeetingActivity"
            android:label="@string/title_activity_meeting"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MemberActivity"
            android:label="@string/title_activity_member"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CommitteeActivity"
            android:label="@string/title_activity_committee"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LoginKeyActivity"
            android:label="@string/title_activity_login_key"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".AddCommitteeActivity"
            android:label="@string/title_activity_add_committee"/>
        <activity android:name=".AddMeetingActivity"
            android:label="@string/title_activity_add_meeting"/>
        <activity android:name=".AddMemberActivity"
            android:label="@string/title_activity_add_member"/>
        <activity android:name=".UpdateMemberActivity"
            android:label="@string/title_activity_update_member"/>
        <activity android:name=".UpdateCommitteeActivity"
            android:label="@string/title_activity_update_committee"/>
        <activity android:name=".UpdateMeetingActivity"
            android:label="@string/title_activity_update_meeting"/>
        <activity android:name=".ViewMemberActivity"
            android:label="@string/title_activity_view_member"/>
        <activity android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>